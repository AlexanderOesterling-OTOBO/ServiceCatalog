<div id="ServiceID{{ ID }}" class="oooServiceContainer">
    <h2 class="oooServiceName">{{ Name }}</h2>
    <div class="oooDescriptionShort">{{ DescriptionShort }}</div>
    <a title="{{ 'Show details of this service.' | Translate }}" class="oooInformation">
        <i class="ooofo ooofo-help"></i>
    </a>
    {% if TicketType %}
        <a title="{{ 'Create a new ticket for this service.' | Translate }}" href="{{ Baselink }}Action=CustomerTicketMessage;ServiceID={{ ID }}" class="oooCreate">
            <i class="ooofo ooofo-add"></i>
        </a>
    {% endif %}
    {% if NumberOfSubservices %}
        <div class="oooSubservices">{{ NumberOfSubservices }} {{ 'sub-service(s) available' | Translate }}</div>
    {% endif %}
</div>
